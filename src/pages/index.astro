import Button from '../ui/components/Button.astro';
import Container from '../ui/components/Container.astro';
import bogota from '../assets/img/bogota.jpg'
import ProjectsGrid from '../ui/components/ProjectsGrid.astro';
import img_home_1 from '../assets/img/img_home_1.jpg'

const projects = [
    {
        id: 1,
        title: "Ciudadela San Juan Bosco",
        type: "Desarrollo",
        description: "Desarrollo de vivienda, comercio y equipamientos institucionales.",
        location: "Bogotá",
        year: "2023",
        image: img_home_1,
        slug: "ciudadela-san-juan-bosco",
